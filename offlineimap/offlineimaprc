[general]
accounts = main
pythonfile = ~/syscfg/offlineimap/lib.py

[Account main]
localrepository = main-local
remoterepository = main-remote
autorefresh = 1
presynchook = ~/syscfg/offlineimap/lib.py
postsynchook = ~/syscfg/offlineimap/postsync

[Repository main-local]
type = Maildir
localfolders = ~/mail
nametrans = lambda f: '[Gmail]/' + f if f in ['Drafts', 'Spam', 'Trash', 'Sent Mail'] else f

[Repository main-remote]
type = Gmail
maxconnections = 1
remoteuser = linusarver@gmail.com
nametrans = lambda f: f.replace('[Gmail]/', '') if f.startswith('[Gmail]/') else f
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remotepasseval = decrypt_secret("linusarver@gmail.com")
