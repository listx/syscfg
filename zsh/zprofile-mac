# Global stuff
export PATH=$HOME/bin:$PATH
export EDITOR=vi

# Homebrew stuff
export PATH=$HOME/homebrew/bin:$PATH
export LD_LIBRARY_PATH=$HOME/homebrew/lib:$LD_LIBRARY_PATH

# Use brew-installed GNU Coreutils like `cut' with their native names (not
# prefixed with `g', like `gcut'). To see the manpages for these, use the `g'
# prefix, as in `man gcut'.
export PATH="/Users/linusa/homebrew/opt/coreutils/libexec/gnubin:$PATH"

# Prefer GNU sed over BSD sed.
export PATH="/Users/linusa/homebrew/opt/gnu-sed/libexec/gnubin:$PATH"

# For urxvt running under XQuartz, set keystroke repeat speed (delay, speed)
# manually (this is a bit hacky, but I am not aware of a cleaner way).
if [[ $TERM == "rxvt-unicode-256color" ]]; then
    xset r rate 250 80
fi

# Always pretend that we are using xterm-256color. Even iTerm2 does this.
export TERM=xterm-256color

# Make urxvt (started from XQuartz) happy. In particular, this makes our Zsh
# prompt's use of Chinese characters for displaying the day of the week work
# correctly (otherwise we get garbled characters instead).
export LANG=en_US.UTF-8

alias vi='vim -p'
