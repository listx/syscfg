#!/usr/bin/env zsh

set_theme() {
    local renderer_path
    local root_dir

    root_dir="${HOME}/syscfg/script/terminal-themes"
    renderer_path="${root_dir}/renderControlSequences.dhall"

    # Evaluate control sequences.
    source <(dhall text <<< "${renderer_path} ${1}")

    TERM_COLOR_THEME=$(basename $1)
}
