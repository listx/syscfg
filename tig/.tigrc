set main-view = date:relative-compact author:abbreviated id:width=40 commit-title:yes,graph,refs
set line-graphics = utf-8
set blame-options = -w

# Only show the top 500 commits.
set main-options = -n500

# Only show commits in the main view (don't show spurious, non-committed
# changes).
set show-changes = no

bind generic ) next
bind generic ( previous
bind generic } parent

color cursor black green bold
color title-blur black blue bold
color title-focus black blue bold
