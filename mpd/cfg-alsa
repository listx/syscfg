# see mpd.conf(5) manpage (type "man 5 mpd.conf" into console) for an explanation of all settings
music_directory "~/.mpd-untracked/music"
playlist_directory "~/.mpd-untracked/playlist"
db_file "~/.mpd-untracked/mpd.db"
log_file "~/.mpd-untracked/mpd.log"
pid_file "~/.mpd-untracked/mpd.pid"
state_file "~/.mpd-untracked/mpdstate"
sticker_file "~/.mpd-untracked/sticker.sql"
user "l"
