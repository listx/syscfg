! urxvt settings
! First set base font to Terminus to handle all Latin glyphs
! ...then set Japanese font to take care of most Chinese kanji and also hiragana/katakana
! ...then finally only use Korean font for hangul characters

urxvt*font: xft:Terminus:size=11,\
            xft:Kochi Gothic:antialias=false,\
            xft:Baekmuk Gulim
urxvt*geometry: 100x70
urxvt*depth: 32
urxvt*fading: 20
urxvt*cursorColor: green
urxvt*saveLines: 32767
urxvt*scrollBar: off
urxvt*urlLauncher: firefox

! differentiate some keys
!URxvt.keysym.C-Return:      \033<C-Return>
!URxvt.keysym.S-Return:      \033<S-Return>
!URxvt.keysym.S-space:       \033<S-Space>
!URxvt.keysym.C-Tab:         \033<C-Tab>

! bind CTRL+ALT to change to different font sizes
URxvt.keysym.M-C-0: command:\033]710;xft:Terminus:size=10\007
URxvt.keysym.M-C-minus: command:\033]710;xft:Terminus:size=11\007
URxvt.keysym.M-C-equal: command:\033]710;xft:Terminus:size=16\007

URxvt.keysym.M-C-7: command:\033]710;xft:dejavu sans mono:pixelsize=24\007
URxvt.keysym.M-C-8: command:\033]710;xft:dejavu sans mono:pixelsize=36\007
URxvt.keysym.M-C-9: command:\033]710;xft:dejavu sans mono:pixelsize=48\007

! make urxvt the login shell (even when logged in as ROOT! -- no more "su -m")
urxvt*loginShell:   true
!URxvt*tintColor: #000000
urxvt*shading: 30
!URxvt*termName:     rxvt-unicode
!URxvt*inheritPixmap:   true
!cutchars are characterse used as delimiters for double-click word selection
urxvt*cutchars: "()*,<>[]{}|'
!urxvt*perl-lib: /usr/lib/urxvt/perl/
!urxvt*perl-ext-common: default,matcher
!URxvt*matcher.button: 1
!URxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
!URxvt*keysym.C-u: perl:matcher

! these are hex color values but in 12-digit format (auto-generated by xfce's terminal in ~/*config/Terminal/terminalrc after setting them in the gui version! neat!
!urxvt*background: #3a3a3a
!urxvt*foreground: #dcdccc

