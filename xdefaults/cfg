! disable XIM input for emacs (use SCIM-bridge instead)
Emacs*useXIM: false

! default urxvt settings for all urxvt windows, unless overridden
! with commandline arguments
! NOTE: "URxvt" is a class name and applies to all urxvt windows, unless the
! specific setting is overridden; if it is just "urxvt" here instead, then any
! urxvt window with a specified name (e.g., urxvt -name name_of_window) will
! NOT use the "urxvt" settings! That is why we use URxvt here.

! First set base font to Terminus to handle all Latin glyphs
! ...then set Japanese font to take care of most Chinese kanji and also hiragana/katakana
! ...then finally only use Korean font for hangul characters
URxvt*font: xft:Terminus:pixelsize=14,xft:Kochi Gothic,xft:Baekmuk Gulim
URxvt*geometry: 100x70

! urxvt colors

! dim the colors by 20 percent when the window is inactive
URxvt*fading: 20
URxvt*cursorColor: green

! very basic, elementary-color, black background color theme
URxvt*background: #000000
URxvt*foreground: #cccccc
! black
URxvt*color0:  #000000
URxvt*color8:  #333333
! white
URxvt*color7:  #cccccc
URxvt*color15: #ffffff
! red
URxvt*color1:  #cc0000
URxvt*color9:  #ff3333
! green
URxvt*color2:  #00cc00
URxvt*color10: #33ff33
! yellow
URxvt*color3:  #cccc00
URxvt*color11: #ffff33
! blue
URxvt*color4:  #0000cc
URxvt*color12: #3333ff
! purple
URxvt*color5:  #cc00cc
URxvt*color13: #ff33ff
! cyan
URxvt*color6:  #00cccc
URxvt*color14: #33ffff

! misc urxvt settings

! bind CTRL+ALT to change to different font sizes
URxvt.keysym.M-C-6: command:\033]710;xft:dejavu sans mono:pixelsize=12,xft:Kochi Gothic,xft:Baekmuk Gulim\007
URxvt.keysym.M-C-7: command:\033]710;xft:dejavu sans mono:pixelsize=14,xft:Kochi Gothic,xft:Baekmuk Gulim\007
URxvt.keysym.M-C-8: command:\033]710;xft:dejavu sans mono:pixelsize=24,xft:Kochi Gothic,xft:Baekmuk Gulim\007
URxvt.keysym.M-C-9: command:\033]710;xft:dejavu sans mono:pixelsize=36,xft:Kochi Gothic,xft:Baekmuk Gulim\007
URxvt.keysym.M-C-0: command:\033]710;xft:Terminus:pixelsize=10,xft:Kochi Gothic,xft:Baekmuk Gulim\007
URxvt.keysym.M-C-minus: command:\033]710;xft:Terminus:pixelsize=14,xft:Kochi Gothic,xft:Baekmuk Gulim\007
URxvt.keysym.M-C-equal: command:\033]710;xft:Terminus:pixelsize=20,xft:Kochi Gothic,xft:Baekmuk Gulim\007

! some navigation commands
URxvt.keysym.Control-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: command:\033]720;1\007
URxvt.keysym.Control-Right: command:\033]721;10\007
URxvt.keysym.Control-Left: command:\033]720;10\007

! make urxvt the login shell
URxvt*loginShell:   true
!cutchars are characterse used as delimiters for double-click word selection
URxvt*cutchars: "\"()*,<>[]{}|\'"
URxvt*saveLines: 32767
URxvt*scrollBar: off
URxvt*urlLauncher: firefox
