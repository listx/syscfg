#!/bin/zsh

# set various terminal launcher paths
term1=~/syscfg/scripts/sys/terms/wb.sh
term2=~/syscfg/scripts/sys/terms/bw.sh
term3=~/syscfg/scripts/sys/terms/wB.sh

# check for hostname
case $(hostname) in
    exelion)
        $term2 -e ncmpcpp &
        $term1 -e alsamixer &
        $term2 -n iftop -e sudo iftop -B -i eth1 &
        $term1 -e htop &
        $term3 -e rtorrent &
        $term1 -name WeeChat -e weechat-curses &

        firefox
    ;;
    luxion)
        $term1 -e alsamixer &
        $term2 -n iftop -e sudo iftop -B -i eth0 &
        $term1 -e htop &
        $term1
    ;;
    aether)
        $term1 -e alsamixer &
        $term2 -n iftop -e sudo iftop -B -i eth0 &
        $term1 -e htop &
        $term3 -e rtorrent &
        $term1
    ;;
    *)
    ;;
esac

# vim:syntax=zsh
